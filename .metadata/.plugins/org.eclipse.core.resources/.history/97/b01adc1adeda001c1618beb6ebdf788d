package vector;

import java.util.Scanner;

//import assignmentOnCollections.StudentPojoArray;

public class RemoveDetails {

	public void removeDetails() {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the roll number you want to remove details ");
		int indexRemove = input.nextInt();

		for (StudentPojoClass i : GetStudentDetails.studentList) {
			if (i.getRollNo() == indexRemove)
				GetStudentDetails.studentList.remove(indexRemove);

		}
		
		  //GetStudentDetails.studentList.remove(indexRemove); 
		for(StudentPojoClass i:GetStudentDetails.studentList)
		{
			System.out.println("Student Roll number: "
		  + i.getRollNo() + "\nName :" + i.getStudentName() + "\nClass :" + i.getStd()
		  + "\nTamil Mark :" + i.getTamilMark() + "\nEnglish Mark :" +
		  i.getEnglishMark() +"\nMaths Mark :"+i.getMathsMark()+
		  "\nScience Mark :"+i.getScienceMark()+"\nSocial Mark :"+i.getSocialMark()
		  +"\nTotal Marks :" + i.getTotalMark()); 
			}
		  
		 

	}

}
